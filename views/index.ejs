<% include partials/header %>
<%
//jsFiles.push("https://oauth.io/auth/download/latest/oauth.js");
jsFiles.push("/selection-grid/js/jquery.easing.1.3.js");
jsFiles.push("/selection-grid/js/selection-grid.js");
jsFiles.push("/js/home.js");
%>

<div class="toast-wrapper"></div>
<div class="main d-flex w-100 h-100 mx-auto flex-column">
	<div id="stageTouch" class="section active">
		<div class="touch-me-btn rounded-circle mx-auto my-auto">TOUCH ME</div>
	</div>
	<div id="stageCount" class="section">
		<div class="counting-msg mx-auto my-auto"><div class="counting-num my-auto text-center">30000</div></div>
	</div>
	<div id="stageMsg" class="section">
		<div class="mx-auto my-auto">
			<h1 class="text-center instruction-msg">Say cheese!!!!!!!</h1>
		</div>
	</div>
	<div id="stageImage" class="section">
		<div class="tools d-flex w-100 p-3 justify-content-end">
			<div class="toolbox d-flex flex-column">
				<a class="print-btn btn btn-lg btn-primary">PRINT</a>
				<a class="email-btn btn btn-lg btn-primary">EMAIL</a>
				<!--a href="#" id="shareOnTwitter" class="btn btn-lg btn-primary">TWITTER</a-->
				<a class="more-btn btn btn-lg btn-primary">MORE</a>
				<a class="reset-btn btn btn-lg btn-primary">DONE</a>
				<a class="slg-select-all btn btn-lg btn-primary slg-button">Select all</a>
				<a class="slg-deselect-all btn btn-lg btn-primary slg-button">Deselect all</a>
				<a class="slg-cancel btn btn-lg btn-primary slg-button">Cancel</a>
			</div>
		</div>
	</div>
	<div class="recentImagesWrapper">
		<div class="slg-container">
			<div class="slg-grid"></div>
			<div class="slg-box"></div>	
		</div>
		<!--<div id="recentImagesButton"></div>-->
	</div>
	<div class="modal email-modal" tabindex="-1" role="dialog">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h1 class="modal-title">Send Photo</h1>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<form class="email-form mx-auto mt-5 mb-auto">
						<!--h1 class="text-center">Send Photo</h1-->
						<div class="form-group">
							<input required="true" class="email-input form-control form-control-lg" type="email" placeholder="Email address">
						</div>
						<div >
							<button type="submit" class="send-email-btn btn btn-primary btn-lg btn-block">Submit</button>
							<a data-dismiss="modal" class="btn btn-secondary btn-lg btn-block">Cancel</a>
						</div>
					</form>
				</div>
				<!--div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					<button type="button" class="btn btn-primary">Save changes</button>
				</div-->
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	var counterConfig = <%- JSON.stringify(counterConfig) %>;
</script>
<% include partials/footer %>
